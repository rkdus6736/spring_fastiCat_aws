<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.ict03_fastiCat.dao.AdminBoardDAO">
	
	<!-- 공연후기, 자유게시판 게시글 갯수 -->
	<select id="boardCnt" parameterType="map" resultType="int">
		SELECT COUNT(*) AS cnt FROM 
		<choose>
			<when test="category == '공연후기'">
				reviewboard_tbl
			</when>
			<otherwise>
				freeBoard_tbl
			</otherwise>
		</choose>
		WHERE board_show = 'y'
	</select>
	
	<!-- 공연후기, 자유게시판 목록 조회 -->
	<select id="boardList" parameterType="map" resultType="com.spring.ict03_fastiCat.dto.AdminBoardDTO">
		SELECT * FROM 
		<choose>
			<when test="category == '공연후기'">
				reviewboard_tbl
			</when>
			<otherwise>
				freeBoard_tbl
			</otherwise>
		</choose>
		WHERE board_show = 'y'
		ORDER BY board_num
	</select>
	
	<!-- 공연후기, 자유게시판 게시글 삭제 -->
	<update id="boardDelete" parameterType="map">
		UPDATE 
		<choose>
			<when test="category == '공연후기'">
				reviewboard_tbl
			</when>
			<otherwise>
				freeBoard_tbl
			</otherwise>
		</choose>
		SET board_show = 'n'
		WHERE board_num = #{board_num}
	</update>
	
</mapper>
